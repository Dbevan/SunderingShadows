void create(){
   ::create();
   set_id(({"holy symbol","symbol","jarmila_holy_symbol","amulet","silver amulet","three ringed amulet","amulet of interlocked rings"}));
   set_name("holy symbol");
   set_short("holy symbol");
   set_long("This is a holy symbol.");
}

